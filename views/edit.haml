.row
  .small-12.columns
    %header
      %h1 Edit Post
  %article.small-12.columns
    %form(action="/blog" method='post')
      %fieldset
        %legend Edit Post
        %p
          %label(for='post_title')
            Title
            %br
          %input#post_title{:type => 'text', :name => 'post[title]', :value => @post.title}
        %p
          %label(for='post_body')
            Body
            %br
          %textarea#post_body(name='post[body]')
            = @post.body
        %fieldset
          %p
            %button Create Post
            or
            %a(href='/blog') Cancel